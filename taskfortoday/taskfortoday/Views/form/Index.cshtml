@model IEnumerable<taskfortoday.Controllers.Item>

@{
    ViewBag.Title = "Items List";
}
<style>
    body {
        background-color: #f0f2f5;
        color: #343a40;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border: 1px solid #dee2e6;
        background-color: #fff;
        color: #343a40;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-10px);
        }

        .card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .card-body {
        padding: 1.5rem;
    }

    .text-section {
        margin-bottom: 1rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .card-text {
        font-size: 1rem;
        color: #6c757d;
    }

    h2 {
        margin-bottom: 2rem;
        text-align: center;
        color: #007bff;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .container {
        margin-top: 2rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .row {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }

    .form-submit {
        margin-top: 1rem;
    }
</style>

<h3>Items in Cart:</h3>
<ul>
    @foreach (var item in Model)
    {
       <div class="container">
           <div class="row">
               <div class="col-lg-4 col-sm-12 py-2">
                   <div class="card">
                       <img src="@item.Image" class="img-fluid" alt="@item.Name">
                       <div class="card-body">
                           <div class="text-section">
                               <h5 class="card-title">@item.Name</h5>
                               <p class="card-text">Votes: @item.Price</p>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
    }
</ul>

<div>
    @Html.ActionLink("Back to List", "CreateForm")
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
