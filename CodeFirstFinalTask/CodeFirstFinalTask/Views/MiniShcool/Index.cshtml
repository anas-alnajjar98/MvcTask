@{
    ViewBag.Title = "Dashboard";
}

<!-- Add Bootstrap and Tailwind -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">

<!-- Page Content -->
<div class="container mt-5">
    <!-- Welcome Message -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-dark" style="font-family: 'Poppins', sans-serif;">Welcome to the School System</h1>
        <p class="lead text-muted" style="font-family: 'Roboto', sans-serif;">Manage your classes and subjects with ease</p>
    </div>

    <div class="row">
        <!-- Display Classes -->
        <div class="col-md-6 mb-4">
            <h3 class="text-muted" style="font-family: 'Roboto', sans-serif;">Classes</h3>
            <div class="d-flex flex-column gap-3">
                @foreach (var classItem in ViewBag.Classes)
                {
                    <div class="card-style bg-light p-4">
                        <h4 class="heading-style">@classItem.ClassName</h4>
                        <p class="description-style text-muted">Manage students and assignments for this class.</p>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Index", "Students", new { classId = classItem.ClassId })" class="btn-flat">Show Students</a>
                            <a href="@Url.Action("Index", "Assignments", new { classId = classItem.ClassId })" class="btn-flat">View Assignments</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Display Subjects -->
        <div class="col-md-6 mb-4">
            <h3 class="text-muted" style="font-family: 'Roboto', sans-serif;">Subjects</h3>
            <div class="card-style bg-light p-4">
                <h4 class="heading-style">Subjects</h4>
                <p class="description-style text-muted">View and manage subjects across different classes.</p>
                <a href="@Url.Action("Index", "Subjects")" class="btn-flat">Show Subjects</a>
            </div>
        </div>
    </div>
</div>

<!-- CSS Styling -->
<style>
    /* General Background */
    body {
        background-color: #f9f9f9;
    }

    /* Card Styling */
    .card-style {
        background-color: #fff;
        border-radius: 10px;
        border: none;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
        transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

    /* Hover effect for cards */
    .card-style:hover {
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-5px); /* Lift on hover */
    }

    /* Heading Styling */
    .heading-style {
        font-family: 'Poppins', sans-serif;
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    /* Description Styling */
    .description-style {
        font-family: 'Roboto', sans-serif;
        font-size: 1rem;
        color: #6c757d;
    }

    /* Button Styling */
    .btn-flat {
        display: inline-block;
        padding: 0.5em 1.25em;
        font-size: 1rem;
        font-family: 'Roboto', sans-serif;
        color: #007bff;
        background-color: transparent;
        border: 2px solid #007bff;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s, color 0.3s;
    }

    /* Button Hover Effect */
    .btn-flat:hover {
        background-color: #007bff;
        color: white;
    }

    /* Responsive design for smaller screens */
    @@media (max-width: 768px) {
        .card-style {
            padding: 2rem;
        }

        .heading-style {
            font-size: 1.15rem;
        }

        .btn-flat {
            width: 100%; /* Full-width buttons for smaller screens */
        }
    }
</style>
