@model IEnumerable<CodeFirstFinalTask.Models.Assignment>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Assignments</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success mb-3" })
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="bg-primary text-white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassId)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassId)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Assignments", new { id = item.Id })" class="btn btn-sm btn-primary">Edit</a>
                            <a href="@Url.Action("Details", "Assignments", new { id = item.Id })" class="btn btn-sm btn-info">Details</a>
                            <a href="@Url.Action("Delete", "Assignments", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- CSS Styling -->
<style>
    /* General Styling */
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-family: 'Poppins', sans-serif;
        font-weight: bold;
    }

    /* Table Styling */
    .table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    /* Table header styling */
    thead th {
        font-weight: bold;
        font-size: 1.1rem;
    }

    /* Button Styling */
    .btn {
        border-radius: 5px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .table {
            font-size: 0.9rem;
        }

        .btn {
            width: 100%; /* Full width buttons on smaller screens */
            margin-bottom: 5px; /* Add spacing between buttons */
        }
    }
</style>
