@model CodeFirstFinalTask.Models.Assignment

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <h2 class="text-danger mb-4">Delete Assignment</h2>

    <h3 class="text-muted">Are you sure you want to delete this?</h3>

    <div class="card shadow-sm p-4 bg-white rounded">
        <h4 class="text-muted">Assignment Information</h4>
        <hr />

        <!-- Display Assignment Details -->
        <dl class="row">
            <dt class="col-sm-3 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-3 text-end fw-bold">
                @Html.DisplayNameFor(model => model.DueDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DueDate)
            </dd>

            <dt class="col-sm-3 text-end fw-bold">
                @Html.DisplayNameFor(model => model.ClassId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ClassId)
            </dd>
        </dl>

        <!-- Delete Confirmation Form -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mt-4">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>

<!-- CSS Styling -->
<style>
    /* General Styling */
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-family: 'Poppins', sans-serif;
        font-weight: bold;
    }

    h3 {
        font-family: 'Roboto', sans-serif;
        font-weight: normal;
        color: #6c757d;
    }

    /* Card Styling */
    .card {
        border-radius: 10px;
        border: 1px solid #dee2e6;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    /* Definition List Styling */
    .dl-horizontal dt {
        font-size: 1rem;
    }

    .dl-horizontal dd {
        margin-bottom: 1rem;
        font-size: 1rem;
        color: #495057;
    }

    /* Button Styling */
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: bold;
        font-size: 1rem;
    }

    .btn-outline-secondary {
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-color: #6c757d;
    }

    .btn-outline-secondary:hover {
        background-color: #f0f0f0;
    }

    /* Add some space between buttons */
    .me-2 {
        margin-right: 0.5rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dl-horizontal dt {
            text-align: left;
        }
    }
</style>
