@model IEnumerable<MvcTask_7_25_2024_.Models.productsInfo>

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover; 
        }
       </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">

                        @{
                            var imagePath = Url.Content("~/" + product.IMAGE.Replace("MvcTask(7-25-2024)/MvcTask(7-25-2024)/", ""));
                        }
                        <img src="@imagePath" class="card-img-top" alt="@product.NAME">
                        <div class="card-body">
                            <h5 class="card-title">@product.NAME</h5>
                            <p class="card-text">Price: $@product.PRICE</p>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Edit", new { id = product.ID })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Details", new { id = product.ID })" class="btn btn-secondary">Details</a>
                            <a href="@Url.Action("Delete", new { id = product.ID })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
