
@{
    ViewBag.Title = "FormRegs";
}

<h2>FormRegs</h2>
@using (Html.BeginForm("FormContent", "Form"))
{

    <h2>Contact</h2>



    <div class="container mt-5">
        <h2>Contact Us</h2>
        <form method="post">

            <!-- Text input -->
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="Enter your name">
            </div>

            <!-- Number input -->
            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" name="num" class="form-control" id="age" placeholder="Enter your age">
            </div>

            <!-- Radio buttons -->
            <div class="form-group">
                <label>Gender</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="male" value="male">
                    <label class="form-check-label" for="male">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                    <label class="form-check-label" for="female">Female</label>
                </div>
            </div>

            <!-- Select input -->
            <div class="form-group">
                <label for="country">Country</label>
                <select class="form-control" name="Cont" id="country">
                    <option>Palestine </option>
                    <option>Sudan </option>
                    <option>Jordan </option>
                    <option>Lebanon </option>
                    <option>Yemen </option>
                    <option>Syria </option>
                    <option>Qatar </option>
                    <option>Iraq </option>
                    <option>Algeria </option>
                </select>
            </div>

            <!-- Dropdown multiple  -->
            <div class="form-group">
                <label for="interests">Interests</label>
                <select multiple class="form-control" name="inter" id="interests">
                    <option>Technology</option>
                    <option>Sports</option>
                    <option>Music</option>
                    <option>Coding</option>
                    <option>PlayStation</option>
                    <option>Writing </option>
                    <option>Cars </option>
                </select>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary" name="Sub">Submit</button>
        </form>
    </div>
}